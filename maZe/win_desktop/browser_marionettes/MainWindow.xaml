        <Button Content="OK" HorizontalAlignment="Left" Margin="267.167,68,0,0" VerticalAlignment="Top" Width="75" Click="onClose" Grid.Column="1"/>
        <TextBox Text="" HorizontalAlignment="Left" Margin="169.167,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.162,-0.558" Name="pathTextBox" TextWrapping="Wrap" Grid.Column="1"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="132,88,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
